<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/innerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Import Export Code\n(IEC): "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/title1"
                android:text="03110*****" />

            <View
                android:id="@+id/divider1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/title1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/primary_dark" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tan No: "
                android:layout_below="@+id/divider1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_below="@+id/divider1"
                android:layout_toEndOf="@+id/title2"
                android:text="PNEV0*****" />

            <View
                android:id="@+id/divider2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/desc2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/primary_dark" />

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banker: "
                android:layout_below="@+id/divider2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_below="@+id/divider2"
                android:layout_toEndOf="@+id/title3"
                android:text="Bassein Catholic co-operative bank LTD. " />

            <View
                android:id="@+id/divider3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/desc3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/primary_dark" />

            <TextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GST No: "
                android:layout_below="@+id/divider3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_below="@+id/divider3"
                android:layout_toEndOf="@+id/title4"
                android:text="27AZFPS9894N1Z2" />

            <View
                android:id="@+id/divider4"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/desc4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/primary_dark" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>